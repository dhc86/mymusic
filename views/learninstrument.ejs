<!DOCTYPE html>
<html>
  <head><% include partials/template/head.ejs  %></head>
  <body>
  
   <div id="wrapper">

    <!-- sidebar -->
    <% include partials/template/header.ejs %>

    <!-- pagecontent -->

    <div class="className" id="page-content-wrapper">
      <!-- button for navbar -->
      <div class="button-navbar">

        <button type="button" id="menu-toggle" class="btn btn-warning" aria-label="Left Align">
        <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
        </button>
          <img class="center-block"  src="/images/logonavbar.png" alt="">
      </div>       


      <div class="col-lg-12">
        <div class="col-lg-6 block-column">
          <br>
          <div class="embed-responsive embed-responsive-16by9">
          <video loop="loop" width="445" height="290" autoplay>
            <source src="/images/acusticguitar.mp4" type="video/mp4">
            <source src="/images/acusticguitar.ogg" type="video/ogg">
            Your browser does not support the video tag.
          </video>  
          </div>
        <h3 class="text-center">Your Video Lessons list:</h3>
        <% for(var i = 0; i < videos.length; i++) {%>
          <div class="video-container">
            <div class="embed-responsive embed-responsive-16by9 videos-list">
              <iframe class="embed-responsive-item" src="<%= videos[i].video %>"></iframe>
            </div>
            <button type='submit' info="<%= videos[i].video %>" class='btn btn-inverted btn-block btn-xs delete-video-button'><span class='glyphicon glyphicon-thumbs-down' aria-hidden='true'></span> Delete it!</button> 
          </div>
        <% }%>
        <!-- display saved videos in DOM -->
        <div class="new-saved-video"></div>
        <!-- END - display saved videos in DOM -->
        </div>
        <div class="col-lg-6 block-column">
          <h4 class="text-center">Find your favourite sinstruments lessons</h4>
          <form class="navbar-form" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Instrument lesson">
            </div>
            <button type="submit" class="btn btn-warning find-video-button">Find My Lesson</button>
          </form>

          <div class="col-lg-12">
            <h2>Results</h2>    
            <div class="show-videos">
              <div class="videos-image-lists"> 
                <div id="text-list-image">
                  <h3 id="show-text text-center"><span class="glyphicon glyphicon-music" aria-hidden="true"></span>  Enter Instrument to find you Video Lessons! <h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>  
  </div>



    <!-- <% include partials/template/footer.ejs %> -->
    <% include partials/template/jsdefaults.ejs %>

  </body>
</html>


